{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projects list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Creationdate</th>
                <th>Startdate</th>
                <th>Finishdate</th>
                <th>Description</th>
                <th>Budget</th>
                <th>Currentbudget</th>
                <th>Equipmentslist</th>
                <th>Serviceslist</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.name }}</td>
                <td>{% if project.creationDate %}{{ project.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.startDate %}{{ project.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.finishDate %}{{ project.finishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.budget }}</td>
                <td>{{ project.currentBudget }}</td>
                <td>{{ project.equipmentsList }}</td>
                <td>{{ project.servicesList }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('project_show', { 'id': project.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
